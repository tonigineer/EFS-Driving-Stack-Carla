{
    "version": "2.0.0",
    "tasks": [
        // ===================================================================
        //                      Building
        // ===================================================================
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf build install log",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "clear && colcon build --symlink-install && source install/setup.bash",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": true
            }
        },
        {
            "label": "re-build",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": ["clean", "build"]
        },
        // ===================================================================
        //                      ROS-Bridge
        // ===================================================================
        {
            "label": "carla-ros-bridge",
            "type": "shell",
            "command": "ros2 launch carla_ros_bridge carla_ros_bridge.launch.py town:=Carla/Maps/Town10HD_Opt host:=$WINDOWS_HOST timeout:=10",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "close": false
            }
        },
        {
            "label": "scenario-follow-route",
            "type": "shell",
            "command": "ros2 launch carla_spawn_objects carla_spawn_objects.launch.py objects_definition_file:=$WORKSPACE_DIR/configs/scenarios/follow_route.json",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "close": false
            }
        },
        // ===================================================================
        //                      Services
        // ===================================================================
        {
            "label": "start-planner",
            "type": "shell",
            "command": "clear && ros2 launch planner planner.launch.py host:=$WINDOWS_HOST",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "close": false
            },
        },
        // {
        //     "label": "start_control_interface",
        //     "type": "shell",
        //     "command": "ros2 launch carla_ackermann_control carla_ackermann_control.launch.py",
        //     "presentation": {
        //         "reveal": "always",
        //         "revealProblems": "onProblem",
        //         "close": false
        //     },
        // },
        // ===================================================================
        //                      Task for EGO-VEHICLE
        // ===================================================================
        {
            "label": "ego-vehicle-move-to",
            "type": "shell",
            "command": "clear && python3 -c 'from planner import CarlaAPI;pattern=[\"ego_vehicle\"];CarlaAPI.move_to_actor(pattern)'",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": false
            },
        },
        {
            "label": "ego-vehicle-open-dashboard",
            "type": "shell",
            "command": "python3 $WORKSPACE_DIR/scripts/carla/dashboard.py",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "close": false
            },
        },
    ]
}