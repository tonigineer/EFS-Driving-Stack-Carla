{
    "version": "2.0.0",
    "tasks": [
        // ===================================================================
        //                      Main
        // ===================================================================
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf build install log",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "focus": true,
                "close": false
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "clear && colcon build --symlink-install && source install/setup.bash",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": false
            }
        },
        {
            "label": "re-build",
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": ["clean", "build"]
        },
        {
            "label": "carla-ros-bridge",
            "type": "shell",
            "command": "ros2 launch carla_ros_bridge carla_ros_bridge.launch.py town:=Carla/Maps/Town10HD_Opt host:=$WINDOWS_HOST timeout:=10 synchronous_mode_wait_for_vehicle_control_command:=False fixed_delta_seconds:=0.05 use_sim_time:=True passive:=True",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": false
            }
        },
        // ===================================================================
        //                      Set up Scenario
        // ===================================================================
        {
            "label": "set-up-scenario",
            "dependsOrder": "sequence",
            "dependsOn": [
                "spawn-actor",
            ]
        },
        {
            "label": "spawn-actor",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 launch carla_spawn_objects carla_spawn_objects.launch.py objects_definition_file:=$WORKSPACE_DIR/configs/scenarios/follow_route.json",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": false
            }
        },
        // {
        //     "label": "spawn-actor",
        //     "type": "shell",
        //     "command": "clear && python3 -c 'from planner import CarlaAPI; CarlaAPI.remove_actors([\"ego_vehicle\"]); CarlaAPI.spawn_vehicle(blueprint=\"vehicle.audi.etron\",role_name=\"ego_vehicle\")'",
        //     "presentation": {
        //         "reveal": "always",
        //         "revealProblems": "onProblem",
        //         "close": true
        //     }
        // },
        // ===================================================================
        //                      Ready Scenario
        // ===================================================================
        {
            "label": "ready-scenario",
            "dependsOn": [
                "move-to-actor",
                "start-planner",
                "open-dashboard"
            ]
        },
        {
            "label": "move-to-actor",
            "type": "shell",
            "command": "clear && source install/setup.bash && python3 -c 'from planner import CarlaAPI; CarlaAPI.move_to_actor([\"ego_vehicle\"])'",
            "presentation": {
                "reveal": "silent",
                "revealProblems": "onProblem",
                "close": true
            },
        },
        {
            "label": "pin-spectator",
            "type": "shell",
            "command": "clear && source install/setup.bash && python3 -c 'from planner import CarlaAPI; CarlaAPI.pin_spectator()'",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "close": false
            },
        },
        {
            "label": "start-planner",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 launch planner planner.launch.py host:=$WINDOWS_HOST",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": false
            },
        },
        {
            "label": "open-dashboard",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 launch dashboard dashboard.launch.py host:=$WINDOWS_HOST",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": false
            },
        },
        {
            "label": "remove-actor",
            "type": "shell",
            "command": "clear && source install/setup.bash && python3 -c 'from planner import CarlaAPI; CarlaAPI.remove_actors([\"ego_vehicle\", \"sensor.\"])'",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": true
            },
        },
        {
            "label": "respawn-actor",
            "type": "shell",
            "command": "clear && source install/setup.bash && python3 -c 'from planner import CarlaAPI; CarlaAPI.respawn_actor()'",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": false
            },
        },
        // ===================================================================
        //                      Controlling
        // ===================================================================
        {
            "label": "start-controlling",
            // "type": "shell",
            // "dependsOrder": "sequence",
            "dependsOn": [
                "start-ackermann-interface",
                "start-mpc-controller"]
        },
        {
            "label": "start-ackermann-interface",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 launch carla_ackermann_control carla_ackermann_control.launch.py",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": false
            },
        },
        {
            "label": "start-mpc-controller",
            "type": "shell",
            "command": "clear && source install/setup.bash && ros2 launch controller controller.launch.py",
            "presentation": {
                "reveal": "always",
                "revealProblems": "onProblem",
                "focus": true,
                "close": false
            },
        },
    ]
}