{
    "VsCodeTaskButtons.showCounter": false,
    "VsCodeTaskButtons.tasks": [
        // https://code.visualstudio.com/api/references/icons-in-labels
        // https://emojipedia.org/
        {
            "label": "$(search-refresh) Re-Build",
            "task": "re-build",
            "tooltip": "üßπüõ†Ô∏è Start the \"re-build\" task"
        },
        {
            "label": "$(comments-view-icon) Carla-ROS-Bridge",
            "task": "carla-ros-bridge",
            "tooltip": "üåâ Start the \"carla-ros-bridge\""
        },
        {
            "label": "$(ports-open-browser-icon) Prepare/reset scenario",
            "task": "set-up-scenario",
            "tooltip": "üó∫Ô∏è Prepare/reset scenario \"follow-route\""
        },
        {
            "label": "$(notebook-execute-all) Start controlling",
            "task": "start-controlling",
            "tooltip": "üöó Start \"MPC controller\" with \"ackermann-interface\""
        },
        {
            "label": "$(file-directory-create) Tools",
            "tasks": [
                {
                    "label": "$(tools) Build",
                    "task": "build",
                    "description": "Call colcon build --symlink-install"
                },
                {
                    "label": "$(notebook-delete-cell) Clean",
                    "task": "clean",
                    "description": "Remove all build directories"
                },
                {
                    "label": "$(person-add) Spawn Actor",
                    "task": "spawn-actor",
                    "description": "Spawn \"Audi Etron\" as \"ego-vehicle\" (destroy if exists)"
                },
                {
                    "label": "$(telescope) Move to Actor",
                    "task": "move-to-actor",
                    "description": "Move to Actor \"ego-vehicle\""
                },
                // {
                //     "label": "$(notebook-delete-cell) Follow random route",
                //     "task": "scenario-follow-route",
                //     "description": "   üí° One car follows a random route around town"
                // },
                {
                    "label": "$(dashboard) Open Dashboard",
                    "task": "ego-vehicle-open-dashboard",
                    "description": "Open dashboard for actor \"ego-vehicle\" with two cameras"
                },
                {
                    "label": "$(notebook-delete-cell) Start Planner",
                    "task": "start-planner",
                    "description": "Random route with path and reference messages for actor \"ego-vehicle\""
                },
                {
                    "label": "$(symbol-event) Controller",
                    "task": "ego-vehicle-controller",
                    "description": "Start MPC controller to follow reference from \"Planner\""
                },
                {
                    "label": "$(symbol-interface) Ackermann",
                    "task": "start-ackermann-interface",
                    "description": "Start interface for Carla to control by Steering angle, Velocity and Acceleration"
                },
            ],
            "tooltip": "Collection of \"all tasks\" to start separately"
        },
